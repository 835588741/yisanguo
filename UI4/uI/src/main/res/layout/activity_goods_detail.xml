<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:clipToPadding="true"
    android:fitsSystemWindows="true" 
    android:background="@color/gray_light"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" >

            <com.soul.project.application.view.MTextView
                android:id="@+id/txtGoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="物品名"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <com.soul.project.application.view.MTextView
                android:id="@+id/txtGoodGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/txtGoodName"
                android:text="80级"
                android:textColor="@color/blue"
                android:textSize="13sp" />
        </RelativeLayout>

        <com.soul.project.application.view.MTextView
            android:id="@+id/txtGoodDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="6dp"
            android:text="描述"
            android:textColor="@color/black_light_title_text_color"
            android:textSize="13sp" />
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        >
        
           <TextView
            android:id="@+id/txtNJZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="[ 耐久值:0 ]"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            android:visibility="visible" />
           
          <TextView
            android:id="@+id/txtStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="[ ~ 星 ]"
            android:layout_marginLeft="5dp"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" >

            <com.soul.project.application.view.MTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="卖价:"
                android:textColor="@color/black_light_title_text_color"
                android:textSize="13sp" />

            <com.soul.project.application.view.MTextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="1两白银"
                android:textColor="@color/red"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <com.soul.project.application.view.MTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="卖家:"
                android:textColor="@color/black_light_title_text_color"
                android:textSize="13sp" />

            <com.soul.project.application.view.MTextView
                android:id="@+id/txtSellerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="解锋镝"
                android:textColor="@color/red"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_selector_green"
            android:text="我要买下"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_bar_height"
        android:background="#9de5f7"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnLeft"
            android:layout_width="@dimen/button_width_style2"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_selecctor"
            android:gravity="center"
            android:text="离开"
            android:textColor="@drawable/textview_selector"
            android:textSize="@dimen/menu_bar_button_textsize" />

        <com.soul.project.application.view.MTextView
            android:id="@+id/txtPlaceName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#f6db9c"
            android:gravity="center"
            android:text="物品详情"
            android:textColor="@color/blue"
            android:textSize="@dimen/menu_bar_title_textsize" />

        <Button
            android:id="@+id/btnRight"
            android:layout_width="@dimen/button_width_style2"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_selecctor"
            android:gravity="center"
            android:text="离开"
            android:textColor="@drawable/textview_selector"
            android:textSize="@dimen/menu_bar_button_textsize" />
    </LinearLayout>

</LinearLayout>