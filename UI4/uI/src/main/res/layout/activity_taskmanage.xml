<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
        android:orientation="vertical" >
    
    
<com.soul.project.application.view.MTextView
        android:id="@+id/txtTaskDescript"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="正在加载任务中..."
        android:padding="8dp"
        android:visibility="gone"
        android:background="@color/gray_light"
        android:textColor="@color/black_light_title_text_color"
        android:textSize="16sp" />

<com.soul.project.application.view.MTextView
        android:id="@+id/txtTaskDescriptDaily"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="正在加载任务中..."
        android:padding="8dp"
        android:visibility="visible"
        android:background="@color/gray_light"
        android:textColor="@color/black_light_title_text_color"
        android:textSize="16sp" />

            <Button
                android:id="@+id/btnChangeTask"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="38dp"
                android:background="@drawable/button_selector_normalblue_pressgray"
                android:gravity="center"
                android:text="更换任务（5两银子一次）"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_bar_button_textsize_big" />

        <LinearLayout
            android:id="@+id/layoutFunction3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_bar_height"
            android:background="#9de5f7"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnOut"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="离开"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />

                        <Button
                android:id="@+id/btnDuoBaoTask"
                android:layout_width="@dimen/button_width_style2"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="夺宝任务"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />
            

            <com.soul.project.application.view.MTextView
                android:id="@+id/txtTaskName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#f6db9c"
                android:gravity="center"
                android:text="夺宝任务"
                android:textColor="@color/blue"
                android:textSize="@dimen/menu_bar_title_textsize" />

            <Button
                android:id="@+id/btnBranchTask"
                android:layout_width="@dimen/button_width_style2"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="新手任务"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />

            <Button
                android:id="@+id/btnHelp"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="求助"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />
        </LinearLayout>
        
    

</LinearLayout>
