<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >
    
                <com.soul.project.application.view.MTextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="8dp"
                android:gravity="center"
                android:background="@color/blue_one"
                android:text="@string/tip_valid"
                android:visibility="visible" />
                
                
                                <com.soul.project.application.view.MTextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="13sp"
                android:padding="3dp"
                android:gravity="center"
                android:text="@string/tip_valid_desc"
                android:visibility="visible" />

                                             <com.soul.project.application.view.MTextView
                android:id="@+id/txtCountTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:padding="3dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="00:00"
                android:visibility="visible" /> 
                                
             <com.soul.project.application.view.MTextView
                android:id="@+id/txtQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow"
                android:textSize="15sp"
                android:padding="3dp"
                android:textStyle="bold"
                android:background="@color/black"
                android:gravity="center"
                android:text="1+5=?"
                android:visibility="visible" />                    
                
             <EditText 
                 android:id="@+id/etAnswer"
                 android:layout_width="150dp"
                 android:layout_height="wrap_content"
                 android:hint="@string/tip_answer"
                 android:textSize="14dp"
                 android:padding="8dp"
                 android:inputType="number"
                 android:layout_marginTop="5dp"
                 android:gravity="center"
                 android:textColor="@color/blue_two"
                 android:background="@drawable/border_of_layout"
                 />
             
             <Button 
                 android:id="@+id/btnSubmit"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginTop="12dp"
                 android:layout_marginBottom="10dp"
                 android:text="@string/tip_submit"
                 android:textSize="15sp"
                 android:background="@drawable/button_selector_green"
                 />
</LinearLayout>
