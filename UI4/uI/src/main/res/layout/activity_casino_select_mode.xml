<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
        android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/layoutShaiZi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_of_layout_blue"
        android:padding="6dp"
        android:layout_margin="6dp"
        >
      <com.soul.project.application.view.MTextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="骰子压大小"
        />
      
      <com.soul.project.application.view.MTextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="12sp"
        android:textColor="@color/gray_one"
        android:text="介绍:与赌场的坐席对博，可选择每次压注 1两   2两   3两    4两   5两  6两"
        />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/layoutSheLie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_of_layout_blue"
        android:padding="6dp"
        android:layout_margin="6dp"
        >
      <com.soul.project.application.view.MTextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="射猎博彩"
        />
      
      <com.soul.project.application.view.MTextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="12sp"
        android:textColor="@color/gray_one"
        android:text="介绍:猎场中每支箭20铜板，视野中会出现各种猎物，兔子、金钱豹、猛虎、雄鹰、巨熊、野狼等，射中猎取后各个猎物的赏金各不相同，但需要注意猎场中也有可能出现其他玩家或赌场工作人员，如果你不幸射中他们，需要支付一定的赔偿费。"
        />
    </LinearLayout>    
  

        <LinearLayout 
        android:id="@+id/layoutTianDiRen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_of_layout_blue"
        android:padding="6dp"
        android:layout_margin="6dp"
        >
      <com.soul.project.application.view.MTextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="天地人三才"
        />
      
      <com.soul.project.application.view.MTextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="12sp"
        android:textColor="@color/gray_one"
        android:text="由玩家出资坐庄，组成赌桌，共有三种牌: 天牌，地牌，人牌， 规则 ：天胜地，地胜任，人生天"
        />
    </LinearLayout>    
    
</LinearLayout>
