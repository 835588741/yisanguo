<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/gray_light"
        android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >
    
    <ListView 
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </ListView>
    
    
                                   <!-- 菜单栏 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/menu_bar_height"
                    android:background="#9de5f7"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btnReturnBack"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_selecctor"
                        android:gravity="center"
                        android:text="返回上页"
                        android:textColor="@drawable/textview_selector"
                        android:textSize="@dimen/menu_bar_button_textsize" />

                    <Button
                        android:id="@+id/btnAddMoney"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_selecctor"
                        android:gravity="center"
                        android:text="注入资金"
                        android:visibility="gone"
                        android:textColor="@drawable/textview_selector"
                        android:textSize="@dimen/menu_bar_button_textsize" />

                    <Button
                        android:id="@+id/btnCheZhuang"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_selecctor"
                        android:gravity="center"
                        android:text="我要撤庄"
                        android:visibility="gone"
                        android:textColor="@drawable/textview_selector"
                        android:textSize="@dimen/menu_bar_button_textsize" />
                </LinearLayout>

</LinearLayout>
