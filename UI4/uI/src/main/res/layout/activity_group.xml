<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/postlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:divider="@null" />

    <!-- 菜单栏 -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_bar_height_large"
            android:background="#9de5f7"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#9de5f7"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="@dimen/button_width_large"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_selecctor"
                    android:gravity="center"
                    android:text="离开"
                    android:textColor="@drawable/textview_selector"
                    android:textSize="@dimen/menu_bar_button_textsize_big" />

                <Button
                    android:id="@+id/btnManage"
                    android:layout_width="@dimen/button_width_large"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_selecctor"
                    android:gravity="center"
                    android:text="管理"
                    android:textColor="@drawable/textview_selector"
                    android:textSize="@dimen/menu_bar_button_textsize_big" />
            </LinearLayout>

            <EditText
                android:id="@+id/etCommentText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_color_white"
                android:hint="请输入内容"
                android:gravity="center"
                android:textColorHint="@color/gray_two"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <com.soul.project.application.view.MTextView
                android:id="@+id/txtRefresh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector_green"
                android:gravity="center"
                android:text="点击刷新"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_bar_title_textsize"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#9de5f7"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnSubmitComment"
                    android:layout_width="@dimen/button_width_large"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_selecctor"
                    android:text="发送"
                    android:textColor="@drawable/textview_selector"
                    android:textSize="@dimen/menu_bar_button_textsize_big" />

                <Button
                    android:id="@+id/btnGroupList"
                    android:layout_width="@dimen/button_width_large"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_selecctor"
                    android:gravity="center"
                    android:text="列表"
                    android:textColor="@drawable/textview_selector"
                    android:textSize="@dimen/menu_bar_button_textsize_big" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>