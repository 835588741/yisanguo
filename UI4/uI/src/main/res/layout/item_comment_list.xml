<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:layout_marginTop="3dp" >

        <com.soul.project.application.view.MTextView
            android:id="@+id/txtPosterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="许仕永 (1楼)"
            android:textColor="@color/blue"
            android:textSize="12sp" />
        
        <View 
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            />
        
     <com.soul.project.application.view.MTextView
            android:id="@+id/txtDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_of_layout_orange"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="6dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="删除"
            android:textColor="@color/black_light_title_text_color"
            android:textSize="12sp" />
                
     <com.soul.project.application.view.MTextView
            android:id="@+id/txtGag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_of_layout"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="禁封"
            android:textColor="@color/black_light_title_text_color"
            android:textSize="12sp" />

        
    </LinearLayout>

    <com.soul.project.application.view.MTextView
        android:id="@+id/txtComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLength="1200"
        android:lineSpacingMultiplier="1.2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scrollbars="vertical"
        android:text="欢快活泼的孩子，充满稚气的孩童脸庞，还有真心的笑容常伴，让人看着就喜欢。"
        android:textColor="@color/black_light_title_text_color"
        android:textSize="14sp" />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        >
     
             <com.soul.project.application.view.MTextView
            android:id="@+id/txtReplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_of_layout_blue"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="6dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="点击回复"
            android:textColor="@color/black_light_title_text_color"
            android:textSize="12sp" />
        
        <com.soul.project.application.view.MTextView
            android:id="@+id/txtPubTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="评论时间:2016-6-17 18:54"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_light_title_text_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@color/app_color_divider" />

</LinearLayout>