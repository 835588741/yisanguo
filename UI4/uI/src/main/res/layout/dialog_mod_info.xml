<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/temp_background"
    android:orientation="vertical" >
    
    <LinearLayout 
        style="@style/style_defaule_width2match_height2wrap"
        android:src="@drawable/dialog_titlebar_bg"
        android:orientation="horizontal"
        android:padding="6dp"
        >
        <TextView 
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="对话框标题"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            />
        <ImageButton 
            android:id="@+id/ibClose"
            android:padding="8dp"
            style="@style/style_defaule_width2wrap_height2wrap"
            android:background="@drawable/icon_close"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/layoutContentView"
    	style="@style/style_defaule_width2match_height2wrap"    
    	android:background="@drawable/diaog_content_bg"
    	android:orientation="vertical"
    	android:paddingStart="30dp"
    	android:paddingEnd="30dp"
    	android:paddingTop="20dp"
    	android:paddingBottom="20dp"
        >

        
    </LinearLayout>

</LinearLayout>
