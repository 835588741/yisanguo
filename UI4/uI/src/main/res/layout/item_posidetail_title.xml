<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
        <com.soul.project.application.view.MTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:text="欢快活泼的孩子，充满稚气的孩童脸庞，还有真心的笑容常伴，让人看着就喜欢。"
        android:textColor="@color/black_light_title_text_color"
        android:textSize="16sp" />
    

        
                    <View 
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:background="@color/app_color_divider"
    />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
                    <com.soul.project.application.view.MTextView
        android:id="@+id/txtPosterName"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:text="许仕永"
        android:textStyle="italic"
        android:textColor="@color/black_light_title_text_color"
        android:textSize="12sp" />
        
                    <com.soul.project.application.view.MTextView
        android:id="@+id/txtPubTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:gravity="left"
        android:textStyle="italic"
        android:layout_marginRight="10dp"
        android:text="2016-6-17 18:54"
        android:textColor="@color/black_light_title_text_color"
        android:textSize="12sp" />
        
    </LinearLayout>
    
        <com.soul.project.application.view.MTextView
        android:id="@+id/txtDescript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:scrollbars="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:text="欢快活泼的孩子，充满稚气的孩童脸庞，还有真心的笑容常伴，让人看着就喜欢。"
        android:textColor="@color/black_light_title_text_color"
        android:textSize="14sp" />

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="3dp"
            >
            
        <com.soul.project.application.view.MTextView
        android:id="@+id/txtCommentCount"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="共有0条回帖"
        android:paddingTop="8dp"
        android:background="@color/white"
        android:textColor="@color/blue"
        android:textSize="14sp" />
        <!-- 删除 -->
        <com.soul.project.application.view.MTextView
            android:id="@+id/txtDeletePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_of_layout"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="删除"
            android:textColor="@color/black_light_title_text_color"
            android:textSize="12sp" />
        <!-- 置顶 -->
        <com.soul.project.application.view.MTextView
            android:id="@+id/txtFirstPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_of_layout_blue"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="置顶"
            android:textColor="@color/black_light_title_text_color"
            android:textSize="12sp" />
        <!-- 加精 -->
        <com.soul.project.application.view.MTextView
            android:id="@+id/txtBoutique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_of_layout_orange"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="加精"
            android:textColor="@color/black_light_title_text_color"
            android:textSize="12sp" />
        
        </LinearLayout>
</LinearLayout>
