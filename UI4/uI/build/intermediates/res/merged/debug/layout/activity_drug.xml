<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
        android:clipToPadding="true"
    android:fitsSystemWindows="true"    
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        android:gravity="center"
        android:background="@color/gray_light"
        >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="一级药水"
		    android:textSize="15sp"
		    android:textColor="@color/blue_one"
		    />
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="三十铜板"
		    android:textSize="14sp"
		    android:layout_marginLeft="6dp"
		    android:textColor="@color/red"
		    />		
		<TextView 
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:text="一级红药水,喝下可以补充体能，回复血量300"
		    android:textSize="12sp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:textColor="@color/gray"
		    />
		<Button
		    android:id="@+id/btnBuyD1" 
		    android:layout_width="wrap_content"
		    android:layout_height="35dp"
		    android:text="购买"
		    android:textSize="12sp"
		    android:textColor="@color/white"
		    android:background="@drawable/button_selector_green"
		    />
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="5dp"
        android:background="@color/gray"
        />
    
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        android:gravity="center"
        android:background="@color/gray_light"
        >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="二级药水"
		    android:textSize="15sp"
		    android:textColor="@color/blue_one"
		    />
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="一百铜板"
		    android:textSize="14sp"
		    android:layout_marginLeft="6dp"
		    android:textColor="@color/red"
		    />		
		<TextView 
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:text="二级红药水,喝下可以补充体能，回复血量1000"
		    android:textSize="12sp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:textColor="@color/gray"
		    />
		<Button
		    android:id="@+id/btnBuyD2" 
		    android:layout_width="wrap_content"
		    android:layout_height="35dp"
		    android:text="购买"
		    android:textSize="12sp"
		    android:textColor="@color/white"
		    android:background="@drawable/button_selector_green"
		    />
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="5dp"
        android:background="@color/gray"
        />
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        android:gravity="center"
        android:background="@color/gray_light"
        >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="三级药水"
		    android:textSize="15sp"
		    android:textColor="@color/blue_one"
		    />
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="二百铜板"
		    android:textSize="14sp"
		    android:layout_marginLeft="6dp"
		    android:textColor="@color/red"
		    />
				
		<TextView 
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:text="三级红药水,喝下可以补充体能，回复血量2200"
		    android:textSize="12sp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:textColor="@color/gray"
		    />
		<Button
		    android:id="@+id/btnBuyD3" 
		    android:layout_width="wrap_content"
		    android:layout_height="35dp"
		    android:text="购买"
		    android:textSize="12sp"
		    android:textColor="@color/white"
		    android:background="@drawable/button_selector_green"
		    />
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="5dp"
        android:background="@color/gray"
        />    
  
</LinearLayout>
