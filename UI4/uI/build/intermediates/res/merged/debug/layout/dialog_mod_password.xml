<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="vertical" >
    
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="修改密码"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="@color/blue_two"
        />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/black"
        />
    
    <EditText 
        android:id="@+id/etOldPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入原密码"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/blueviolet"
        android:background="@drawable/edittext_selecctor"
        />
    
        <EditText 
        android:id="@+id/etNewPwd"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/blueviolet"
        android:background="@drawable/edittext_selecctor"
        android:hint="请输入新密码"
        />
        

           <LinearLayout 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="24dp"
               >
		       <Button 
		           android:id="@+id/btnConfirm"
			    android:layout_width="0dp"
			    android:layout_weight="1"
			    android:background="@drawable/button_selector_green"
			    android:textColor="@color/white"
			    android:textSize="14sp"
			    android:layout_marginRight="20dp"
			    android:layout_marginLeft="20dp"
			    android:layout_height="35dp"
			    android:text="确定"
			    /> 
		       <Button 
		           android:id="@+id/btnCancel"
			    android:layout_width="0dp"
			    android:layout_weight="1"
			    android:background="@drawable/button_selector_mod_gender"
			    android:textColor="@color/white"
			    android:textSize="14sp"			
			    android:layout_height="35dp"
			    			    android:layout_marginRight="20dp"
			    android:layout_marginLeft="20dp"    
			    android:text="取消"
			    /> 
		       
           </LinearLayout>
</LinearLayout>
