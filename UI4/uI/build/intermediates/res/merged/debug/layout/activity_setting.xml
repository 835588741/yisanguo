<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wison="http://schemas.android.com/apk/res/com.soul.project.story.activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:clipToPadding="true"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="战斗提示浮框时长:"
            android:textColor="@color/blue_two"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1秒"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt1_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1.5秒"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="center"
            android:text="2秒"
            android:textColor="@color/red"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="战斗结束后自动离开"
            android:textColor="@color/blue_two"
            android:textSize="17sp" />

        <com.soul.project.application.view.MySwitch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            wison:switchMinHeight="36dp"
            wison:switchMinWidth="75dp"
            wison:thumb="@drawable/switch_thumb_button"
            wison:thumbTextPadding="20dp"
            wison:trackOff="@drawable/switch_track_off_button"
            wison:trackOn="@drawable/switch_track_on_button" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_below="@id/switch1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@color/blue_one" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="背景音乐"
            android:textColor="@color/blue_two"
            android:textSize="17sp" />

        <com.soul.project.application.view.MySwitch
            android:id="@+id/switchBGM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            wison:switchMinHeight="36dp"
            wison:switchMinWidth="75dp"
            wison:thumb="@drawable/switch_thumb_button"
            wison:thumbTextPadding="20dp"
            wison:trackOff="@drawable/switch_track_off_button"
            wison:trackOn="@drawable/switch_track_on_button" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_below="@id/switchBGM"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@color/blue_one" />
    </RelativeLayout>
    
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="夜间模式"
            android:textColor="@color/blue_two"
            android:textSize="17sp" />

        <com.soul.project.application.view.MySwitch
            android:id="@+id/switchNightMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            wison:switchMinHeight="36dp"
            wison:switchMinWidth="75dp"
            wison:thumb="@drawable/switch_thumb_button"
            wison:thumbTextPadding="20dp"
            wison:trackOff="@drawable/switch_track_off_button"
            wison:trackOn="@drawable/switch_track_on_button" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_below="@id/switchNightMode"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@color/blue_one" />
    </RelativeLayout>
    
        
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="是否观战"
            android:textColor="@color/blue_two"
            android:textSize="17sp" />

        <com.soul.project.application.view.MySwitch
            android:id="@+id/switchIsLook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            wison:switchMinHeight="36dp"
            wison:switchMinWidth="75dp"
            wison:thumb="@drawable/switch_thumb_button"
            wison:thumbTextPadding="20dp"
            wison:trackOff="@drawable/switch_track_off_button"
            wison:trackOn="@drawable/switch_track_on_button" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_below="@id/switchIsLook"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@color/blue_one" />
    </RelativeLayout>
    
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="是否开启公聊频道"
            android:textColor="@color/blue_two"
            android:textSize="17sp" />

        <com.soul.project.application.view.MySwitch
            android:id="@+id/switchIsOpenPublicChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            wison:switchMinHeight="36dp"
            wison:switchMinWidth="75dp"
            wison:thumb="@drawable/switch_thumb_button"
            wison:thumbTextPadding="20dp"
            wison:trackOff="@drawable/switch_track_off_button"
            wison:trackOn="@drawable/switch_track_on_button" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_below="@id/switchIsOpenPublicChat"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@color/blue_one" />
    </RelativeLayout>
    
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        
                                <Button 
            android:id="@+id/btnMiMa"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="修改密码"
            android:textSize="13sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_selector_mod_gender"
            />
            
                                
                    <Button 
            android:id="@+id/btnMiBao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:text="修改密保问题"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_selector_mod_gender"
            />
            
        </LinearLayout>

    <!-- 菜单栏 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_bar_height"
        android:background="#9de5f7"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.soul.project.application.view.MTextView
            android:id="@+id/txtOut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_green"
            android:gravity="center"
            android:text="点击离开"
            android:textColor="@color/white"
            android:textSize="@dimen/menu_bar_title_textsize" />
    </LinearLayout>

</LinearLayout>