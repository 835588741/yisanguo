<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/loaddataview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/app_gray_one"
        android:divider="@null" />

    <!-- 菜单栏 -->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" >

        <LinearLayout
            android:id="@+id/layoutBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_bar_height"
            android:background="#9de5f7"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnWuQiDao"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="刀类"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />

            <Button
                android:id="@+id/btnWuQiQiang"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="枪类"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />

            <Button
                android:id="@+id/btnWuQiJIan"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="剑类"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />

            <Button
                android:id="@+id/btnTouKui"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="头盔"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />

            <Button
                android:id="@+id/btnKaiJia"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="铠甲"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />

            <Button
                android:id="@+id/btnPiFeng"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="披风"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />

            <Button
                android:id="@+id/btnXiezi"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="鞋子"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />

            <Button
                android:id="@+id/btnYaoDai"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="腰带"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />
            
            <Button
                android:id="@+id/btnQiTa"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="其他"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />
            
            <Button
                android:id="@+id/btnMyGood"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="我的"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />  
                
            <Button
                android:id="@+id/btnAuction"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selecctor"
                android:gravity="center"
                android:text="拍卖"
                android:textColor="@drawable/textview_selector"
                android:textSize="@dimen/menu_bar_button_textsize" />               
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>