<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical" >
    
	        <com.soul.project.application.view.MTextView 
	            android:id="@+id/txtInfo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="的速度快是多少"
	            android:textColor="@color/blue"
	            android:textSize="14sp"
	            />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        >
        
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_weight="0.5"
	        android:gravity="center"
	        android:orientation="vertical"
	        android:layout_height="match_parent">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="大"
	            android:textColor="@color/red"
	            android:textSize="40sp"
	            />
	        <ListView 
	            android:id="@+id/listBig"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            >
	        </ListView>
	   </LinearLayout>
	   
       <LinearLayout
	        android:layout_width="0dp"
	        android:layout_weight="0.5"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:layout_height="match_parent">
	        
          <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="小"
	            android:textColor="@color/red"
	            android:textSize="40sp"
	            />
	        <ListView 
	            android:id="@+id/listSmall"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            >
	        </ListView>
	   </LinearLayout>
	   
    </LinearLayout>
    
    
                <!-- 菜单栏 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_bar_height"
                android:background="#9de5f7"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnReturn"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_selecctor"
                    android:gravity="center"
                    android:text="返回"
                    android:textColor="@drawable/textview_selector"
                    android:textSize="@dimen/menu_bar_button_textsize" />

                <Button
                    android:id="@+id/btnBig"
                    android:layout_width="@dimen/button_width_big"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_selecctor"
                    android:gravity="center"
                    android:text="押大"
                    android:textColor="@drawable/textview_selector"
                    android:textSize="@dimen/menu_bar_button_textsize" />

                <com.soul.project.application.view.MTextView
                    android:id="@+id/txtRefresh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_green"
                    android:gravity="center"
                    android:text="刷新"
                    android:textColor="@color/white"
                    android:textSize="@dimen/menu_bar_title_textsize" />

                <Button
                    android:id="@+id/btnSmall"
                    android:layout_width="@dimen/button_width_big"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_selecctor"
                    android:gravity="center"
                    android:text="压小"
                    android:textColor="@drawable/textview_selector"
                    android:textSize="@dimen/menu_bar_button_textsize" />


                <Button
                    android:id="@+id/btnRule"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_selecctor"
                    android:gravity="center"
                    android:text="规则"
                    android:textColor="@drawable/textview_selector"
                    android:textSize="@dimen/menu_bar_button_textsize" />
            </LinearLayout>
        </LinearLayout>

