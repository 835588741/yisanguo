                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="玄同太子"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.soul.project.application.view.MTextView
