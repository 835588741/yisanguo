<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ios_dialog_bg"
    android:orientation="vertical" >
    
        <com.soul.project.application.view.MTextView
            android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="*玄异三国的愿望*"
        android:textColor="@color/blueviolet"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/ios_style_dialog_button_press_color" />

    
            <com.soul.project.application.view.MTextView
                android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_margin="8dp"
        android:text="*玄异三国的愿望*"
        android:textColor="@color/black_light_title_text_color"
        android:textSize="13sp" />
            
            <EditText
            android:id="@+id/etReplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:lines="3"
            android:gravity="top|left"
            android:padding="8dp"
            android:textColor="@color/blue"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_bg_gary_color"
            android:maxLength="200"
            android:textSize="11sp" />
    
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <Button
            android:id="@+id/btnReplay"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_normalblue_pressgray"
            android:text="回复瓶主"
            android:textSize="12sp" />
        
          <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_green"
            android:text="不想理睬"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </LinearLayout>
</LinearLayout>
