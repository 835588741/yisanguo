<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="3dp" >

        <NumberPicker
            android:id="@+id/np1"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="年"
            android:textSize="18dp" />

        <NumberPicker
            android:id="@+id/np2"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="月"
            android:textSize="18dp" />

        <NumberPicker
            android:id="@+id/np3"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="日"
            android:textSize="18dp" />
    </LinearLayout>
    
            <View 
            android:background="@color/ios_for_style_dialog_button_press_color"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            />
    
            <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button 
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="15sp"
                android:background="@drawable/button_for_ios_style_dialog_selector"
                android:textColor="@color/black_light_title_text_color"
                />
            <View 
                android:id="@+id/lineview"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/ios_for_style_dialog_button_press_color"
                />
                        <Button 
                            android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textSize="15sp"
                android:background="@drawable/button_for_ios_style_dialog_selector"
                android:textColor="#46bf18"
                />
        </LinearLayout>

   

</LinearLayout>